{
  "Urls": "http://*:5555",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": [
    "http://click2approve.com",
    "https://click2approve.com",
    "http://www.click2approve.com",
    "https://www.click2approve.com"
  ],
  "ConnectionStrings": {
    "Default": ""
  },
  "FileStorage": {
    "RootPath": "/filestorage"
  },
  "Identity": {
    "Password": {
      "RequiredLength": 8
    },
    "Lockout": {
      "MaxFailedAccessAttempts": 3,
      "LockoutTimeSpanInMinutes": 5,
      "AllowedForNewUsers": true
    }
  },
  "EmailSettings": {
    "EmailServiceIsEnabled": true,
    "DefaultFromEmail": "",
    "Host": "",
    "Port": 0,
    "Username": "",
    "Password": "",
    "Templates": {
      "ApprovalRequestSentSubject": "You have a new approval request",
      "ApprovalRequestSentBody": "We would like to inform you that {0} submitted an approval request containing {1}. Please visit {2} to check it.",
      "ApprovalRequestDeletedSubject": "An approval request was deleted",
      "ApprovalRequestDeletedBody": "We would like to inform you that {0} deleted the approval request containing {1}.",
      "ApprovalRequestReviewedSubject": "Your approval request was reviewed",
      "ApprovalRequestReviewedBody": "We would like to inform you that {0} reviewed the approval request containing {1}. Please visit {2} to check it."
    }
  },
  "UI": {
    "BaseUrl": "https://click2approve.com"
  },
  "Limitations": {
    "MaxFileCount": 10,
    "MaxFileSizeBytes": 4194304,
    "MaxApprovalRequestCount": 10,
    "MaxApproverCount": 10
  }
}
