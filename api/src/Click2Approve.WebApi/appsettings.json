{
  "AllowedHosts": "*",
  "AllowedOrigins": [
    "http://click2approve.com",
    "https://click2approve.com",
    "http://www.click2approve.com",
    "https://www.click2approve.com"
  ],
  "Authentication": {
    "BearerTokenExpirationInMinutes": 60,
    "RefreshTokenExpirationInDays": 7
  },
  "ConnectionStrings": {
    "Default": ""
  },
  "Email": {
    "FromEmailAddress": "",
    "Host": "",
    "IsEnabled": true,
    "Password": "",
    "Port": 0,
    "Templates": {
      "ApprovalRequestDeletedBody": "This is a notification that {0} deleted the approval request containing {1}.",
      "ApprovalRequestDeletedSubject": "Approval request deleted",
      "ApprovalRequestReviewedBody": "This is a notification that {0} reviewed the approval request containing {1}. View the request here: {2}.",
      "ApprovalRequestReviewedSubject": "Approval request reviewed",
      "ApprovalRequestSentBody": "This is a notification that {0} submitted an approval request containing {1}. View the request here: {2}.",
      "ApprovalRequestSentSubject": "New approval request"
    },
    "Username": ""
  },
  "FileStorage": {
    "RootPath": "/filestorage"
  },
  "Hangfire": {
    "JobExpirationTimeoutMin": 30
  },
  "Identity": {
    "Lockout": {
      "AllowedForNewUsers": true,
      "LockoutTimeSpanInMinutes": 5,
      "MaxFailedAccessAttempts": 3
    },
    "Password": {
      "RequiredLength": 8
    }
  },
  "Limitations": {
    "MaxApprovalRequestCount": 10,
    "MaxApproverCount": 10,
    "MaxFileCount": 10,
    "MaxFileSizeBytes": 4194304
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "UI": {
    "BaseUrl": "https://click2approve.com/ui"
  },
  "Urls": "http://*:5555"
}
