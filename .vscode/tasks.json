{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-webapi",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "api/src/Click2Approve.WebApi/Click2Approve.WebApi.csproj"
      ],
      "problemMatcher": [
        "$msCompile"
      ],
      "group": "build"
    },
    {
      "label": "test-webapi",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "test",
        "api/tests/Click2Approve.WebApi.Tests/Click2Approve.WebApi.Tests.csproj"
      ],
      "problemMatcher": [
        "$msCompile"
      ],
      "group": "test"
    },
    {
      "label": "run-webapi",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "api/src/Click2Approve.WebApi/Click2Approve.WebApi.csproj"
      ],
      "isBackground": true,
      "problemMatcher": [
        "$msCompile"
      ],
      "group": "test"
    }
  ]
}
